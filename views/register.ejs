<% include ./partials/header.ejs %>
    <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
        <div class="w-[25vw] bg-zinc-100 bg-white px-5 py-10 rounded-md">
            <h1 class="text-3xl text-center leading-none tracking-tighter capitalize font-semibold text-zinc-700">
                Create New Account</h1>
            <form action="/register" method="post">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username"
                    placeholder="Username">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email"
                    placeholder="Email">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact"
                    placeholder="contact">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password"
                    placeholder="Password">


                <input
                    class="border-2 rounded-full rounded block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-sm"
                    type="submit" value="Create New Account">
                <p class="text-xs font-semibold text-zinc-700 mt-2 text-center mx-auto w-3/4">By continuing, you agree
                    to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy;.
                </p>
            </form>
            <a href="/" class="w-full text-center font-semibold inline-block mt-7 text-sm text-zinc-700">Sign up </a>
        </div>
    </div>

    <% include ./partials/footer.ejs %>